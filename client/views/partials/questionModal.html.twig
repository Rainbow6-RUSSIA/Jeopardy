<div id="question-display-modal">
    <div class="content">
        <div class="clue">
            <div class="content"></div>
        </div>
        <div class="answer">
            <h1>Answer</h1>
            <div class="content"></div>
        </div>
    </div>
</div>

<div id="daily-double-display-modal">
    <div class="content">
        <h1>Daily</h1>
        <h1>Double!</h1>

        {% if admin %}
            <form id="daily-double-form">
                <label for="daily-double-bet">Bet: </label>
                <input type="number" id="daily-double-bet" value="" />
                <br />
                <input type="submit" class="button" value="Submit" />
            </form>

        {% endif %}
    </div>
</div>

<div id="final-jeopardy-display-modal">
    <div class="content">
        <h1 class="final-jeopardy-category"></h1>
        <h1 class="final-jeopardy-clue"></h1>


        {% if admin %}
            <div class="answer">
                <div class="content"></div>
            </div>
            <button id="final-jeopardy-next" data-current-step="category" class="button success">Next</button>
        {% endif %}
    </div>





</div>
