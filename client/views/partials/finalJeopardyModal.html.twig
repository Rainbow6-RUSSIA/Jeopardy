<div id="final-jeopardy-display-modal">
    <div class="content">
        <h1 class="final-jeopardy-category"></h1>
        <h1 class="final-jeopardy-clue"></h1>

        {% if admin %}
            <div class="responses">
                {% for player in players %}
                    <div class="response" data-player="{{ player }}">{{ player }}</div>
                {% endfor %}
            </div>
            <div class="answer">
                <div class="content"></div>
            </div>
            <button id="final-jeopardy-next" data-current-step="category" class="button success">Next</button>
        {% else %}
            <div class="final-jeopardy-bet-input-container">
                <label for="final-jeopardy-bet-input">Bet: </label>
                <input id="final-jeopardy-bet-input" type="number" value="0" />
            </div>

            <div class="final-jeopardy-answer-input-container" style="display:none;">
                <label for="final-jeopardy-answer-input">Answer:</label>
                <textarea id="final-jeopardy-answer-input" rows="4"></textarea>
            </div>
        {% endif %}
    </div>

</div>
